= content_for :nav_option do
  = active_nav_to('Historia clínica', patient_consultations_path(@patient))

.row
  .col-md-12
    %strong
      %h4
        = @patient.name
        %small
          #{@patient.age} años
          = gender_tag(@patient)

.row
  .col-md-1.col-xs-4
    %span.semi-strong.text-muted
      No. Cédula
  .col-md-3.col-xs-4
    %span.semi-strong
      = @patient.identity_card_number
.row
  .col-md-1.col-xs-4
    %span.semi-strong.text-muted
      Historia
  .col-md-3.col-xs-4
    %span.semi-strong
      = @patient.medical_history

.row.pull-right
  .col-md-12
    = link_to "Nueva consulta", new_patient_consultation_path(@patient), class: "btn btn-success"

.row
  .col-md-12
    %table.table.table-striped
      %thead
        %tr
          %th.col-md-10 Consultas
          %th.col-md-2
      %tbody
      - @consultations.each do |consultation|
        %tr
          %td
            .row
              .col-md-10.col-md-offset-2
                %strong
                  %big= consultation.created_at.strftime("%b %d, %Y")
            - if consultation.reason.present?
              .row
                .col-md-2.text-right.hidden-xs
                  %span.semi-strong.text-muted Motivo
                .col-md-2.visible-xs
                  %span.semi-strong.text-muted Motivo
                .col-md-10
                  %span
                    = consultation.reason
            - if consultation.diagnostic_plan.present?
              .row
                .col-md-2.text-right.hidden-xs
                  %span.semi-strong.text-muted Plan diagnóstico
                .col-md-2.visible-xs
                  %span.semi-strong.text-muted Plan diagnóstico
                .col-md-10
                  %span.semi-strong
                  = consultation.diagnostic_plan
          %td.text-right
            = link_to "Editar", edit_patient_consultation_path(@patient, consultation), class: 'btn btn-primary btn-sm'

.row
  .col-md-12.text-center
    = paginate @consultations
