#printable-prescription

%script#prescription-tmpl{ type: "x-tmpl-mustache" }
  .row.header
    .col-md-12
      %table{ style: "width: 100%" }
        %tbody
          %tr
            %td{ style: "text-align: right; padding-right: 0.5cm;" }
              {{currentDate}}
            %td{ style: "text-align: right; padding-right: 1.7cm;" }
              {{currentDate}}
          %tr
            %td{ style: "padding-left: 1cm" }
              {{patientName}}
            %td{ style: "padding-left: 3.5cm" }
              {{patientName}}

  .row.body
    .col-md-12
      {{#hasPrescriptions}}
      %table{ style: "width: 100%" }
        %tbody
          {{#prescriptions}}
          %tr
            %td{ style: "width: 50%" }
              {{inscription}}
            %td{ style: "padding-left: 0.5cm" }
              {{{subscription}}}
          {{/prescriptions}}
      {{/hasPrescriptions}}

  .row.footer
    .col-md-12
      {{nextAppointment}}
